    <div class="container">
      <form method="POST" action="/chats" class="chat-form">
        <input
          type="text"
          placeholder="Enter prompt"
          name="prompted"
          required  
          class="chat-input"
        />
        <button class="submit-btn" type="submit">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            class="text-white dark:text-black"
          >
            <path
              d="M7 11L12 6L17 11M12 18V7"
              stroke="black"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            ></path>
          </svg>
        </button>
      </form>
    </div>
